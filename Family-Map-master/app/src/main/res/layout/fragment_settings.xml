            android:id="@+id/eventSwitch"
            android:layout_alignParentEnd="true"/-->
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"/>
    </RelativeLayout>
</LinearLayout>